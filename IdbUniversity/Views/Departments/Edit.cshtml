@model IdbUniversity.Models.Department

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row mt-3">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4 class="text-center">Edit <span class="text-success">@Html.DisplayFor(model => model.DepartmentName)</span> Department</h4>
            </div>
            <div class="card-body">

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.DepartmentID)

                        <div class="form-group mt-2">
                            @Html.LabelFor(model => model.DepartmentName, htmlAttributes: new { @class = "control-label" })
                            <div class="pt-1">
                                @Html.EditorFor(model => model.DepartmentName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.DepartmentName, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group mt-2">
                            @Html.LabelFor(model => model.Budget, htmlAttributes: new { @class = "control-label" })
                            <div class="pt-1">
                                @Html.EditorFor(model => model.Budget, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Budget, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group mt-2">
                            @Html.LabelFor(model => model.StartDate, htmlAttributes: new { @class = "control-label" })
                            <div class="pt-1">
                                @Html.EditorFor(model => model.StartDate, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.StartDate, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group mt-2">
                            @Html.LabelFor(model => model.InstructorID, "Edit Administrator", htmlAttributes: new { @class = "control-label" })
                            <div class="pt-1">
                                @Html.DropDownList("InstructorID", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.InstructorID, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group mt-3">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Save" class="btn btn-lg btn-success" />
                            </div>
                        </div>
                    </div>
                }


            </div>
            <div class="card-footer">
                @Html.ActionLink("Back to List", "Index", null, new {@class="btn btn-lg btn-primary"})
            </div>
        </div>
    </div>
</div>



